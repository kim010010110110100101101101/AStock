# 数据库配置
# MySQL数据库连接（推荐）
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/astock
# SQLite数据库连接（开发环境）
# DATABASE_URL=sqlite:///./astock.db

# API配置
API_V1_STR=/api/v1
PROJECT_NAME=A股数据爬取系统
API_HOST=0.0.0.0
API_PORT=8000

# 爬虫配置
CRAWLER_DELAY=1.0
MAX_RETRY_TIMES=3
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# 数据源配置
# Tushare API Token (需要注册获取: https://tushare.pro/)
TUSHARE_TOKEN=your_tushare_token_here
TUSHARE_ENABLED=true

# AKShare配置
AKSHARE_ENABLED=true

# 同花顺数据源配置
TONGHUASHUN_ENABLED=true

# 龙虎榜数据配置
DRAGON_TIGER_ENABLED=true
DRAGON_TIGER_SOURCE=tonghuashun
# 可选值: tonghuashun, akshare

# 定时任务配置
SCHEDULER_ENABLED=true
# 股票数据更新时间（工作日）
DAILY_UPDATE_TIME=09:30
# 龙虎榜数据更新时间（每日）
DRAGON_TIGER_UPDATE_TIME=20:00

# 缓存配置（可选）
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=false

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/astock.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# 开发环境配置
DEBUG=true
ENVIRONMENT=development
RELOAD=true